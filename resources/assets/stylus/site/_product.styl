@media (max-width: 768px) {
  .product .item {
    .title {
      text-align: center;
      margin: 4px auto;
      font-size: 1.125em;
    }
    .params {
      font-size .875em
    }
    .price-block {
      font-size: .875em;
    }
    .phone a {
      font-size .875em
    }
  }
}

@media (max-width: 575px) {
  .product .services {
    margin-bottom: 30px;
    padding-top: 0;
  }
}