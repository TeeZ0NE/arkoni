.product {
  .item {
    padding 0 0 40px
    font-size 1.125em
    .title {
      margin-bottom 15px
      font-size 1.3em
      position relative
      display inline-block
      &:after {
        position: absolute;
        display: block;
        content: '';
        border: 1px solid #d24a43;
        width: 80%;
        left: 0;
        right: 0;
        bottom: -4px;
        margin: 0 auto;
      }
    }
    .availability {
      display none
    }
    .old-price {
      position relative
      font-size 1.125em
      &:before {
        position: absolute;
        display: block;
        content: '';
        border: 1px solid #d24a43;
        width: 100%;
        left: 0;
        top: 12px;
      }
    }
    .commerce {
      list-style none
      overflow: hidden;
      padding-left 0
      margin-top 15px
      li {
        float left
        border-radius: 5px;
        padding: 2px 10px;
        border 1px solid
        font-size: .75em;
        &:not(:nth-child(1)) {
          margin-left 10px
        }
      }
      .stock {
        color #de0000
        border-color #de0000
      }
      .top-sales {
        color orange-color-hover
        border-color orange-color-hover
      }
      .recommend {
        color #0e7200
        border-color #0e7200
      }
    }
    .price {
      font-size 1.5em
      font-family bold-family
      margin-left 10px
    }
    .img-thumbnail {
      margin 30px auto 30px
      width 200px
      height 260px
      display block
    }
    .rating-block {
      text-align center
    }
    .params {
      list-style none
      margin 20px 0 20px
      li {
        position relative
        line-height 1.5em
      }
      .fa-check {
        position absolute
        left -30px
        top: 4px
      }
    }
    .tags {
      list-style none
      padding-left 0
      margin-top 30px
      li {
        float left
        &:not(:nth-child(1)) {
          margin-left 15px
        }
      }
      a {
        color: #868585
        border 1px solid #868585
        padding 2px 5px
        border-radius 5px
        font-size .875em
        text-decoration none
      }
    }
    .phone {
      font-family bold-family
      font-size 1.5em
    }
    .fa-phone {
      transform: rotateY(160deg);
    }

  }
  .seo {
    background-color seo-bg-color
    padding 40px 0 30px
    .title {
      block-title(10px)
    }
    p {
      text-indent 1.5em
    }
  }
  .often-buy {
    padding 40px 0 30px
    .title {
      block-title(15px)
    }
    .col-md-3 {
      display: inline-flex;
    }
    img {
      height 160px
      width 220px
      display block
      margin 0 auto 15px
    }
    .block {
      border-radius 4px
      padding 15px 15px 120px 15px;
      text-align center
      position relative
      box-shadow()
    }
    .go-to {
      go-to()
      position: absolute;
      bottom: 40px;
      left: 0;
      right: 0;
      width 180px
    }
    .price {
      font-family bold-family
      position: absolute;
      bottom: 90px;
      left: 0;
      right: 0;
    }
  }
  .services {
    margin-bottom 60px
  }
}