.sub-category {
  .filters, .calc-aside-block, .contacts-aside-block {
    padding 25px 15px
    border-radius: 5px;
    box-shadow()
  }
  .calc-aside-block, .filters {
    margin-bottom 15px
  }
  .header, .name {
    font-family bold-family
  }
  .name {
    font-size 1.125em
  }
  .parameters-block {
    input {
      display none
    }
    label {
      position relative
      margin-left 30px
      font-size .875em
      cursor pointer
      &:after {
        display block
        content ''
        width 15px
        height 15px
        border 1px solid #dcdcdc
        position absolute
        left -30px
        top 4px
        border-radius 3px
      }
    }
    input:checked + label {
      &:after {
        background-color orange-color-hover
      }
      &:before {
        display: block;
        content: '\F00C';
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
        color: #fff;
        position: absolute;
        left: -29px;
        top: 3px;
        z-index: 1;
        font-size: .9em;
      }
    }
  }
  .separator {
    border-top 3px solid orange-color-hover
    width 40%
  }
  .seo-block-1,
  .seo-block-2 {
    .title {
      block-title(0)
    }
    p {
      text-indent 1.5em
    }
  }
  .seo-block-2 {
    padding 35px 0
    background #e8e8e8
    margin-top 30px
  }
  .item {
    padding 25px 15px
    &:hover {
      box-shadow: 0 1px 3px 2px rgba(0, 0, 0, 0.25);
    }
    img {
      width: 100%;
      display: block;
      position: relative;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      margin: auto;
    }
    .url-thumbnail {
      width: 100%;
      height: 100%;
      display: block;
      position: relative;
    }
    .info {
      text-align center
    }
    .price {
      font-family bold-family
      font-size 1.5em
    }
    .phone {
      margin: 10px 0 40px;
    }
    .old-price {
      position relative
      font-size 1.125em
      &:before {
        position: absolute;
        display: block;
        content: '';
        border: 2px solid #d24a43;
        width: 100%;
        left: 0;
        top: 10px;
      }
    }
    .title {
      margin-bottom 10px
      font-family bold-family
      font-size 1.125em
      a {
        color base-color
      }
    }
    ul {
      list-style none
      overflow: hidden;
    }
    li {
      float left
      border-radius: 5px;
      padding: 2px 10px;
      border 1px solid
      font-size: .75em;
      &:not(:nth-child(1)) {
        margin-left 10px
      }
    }
    .stock {
      color #de0000
      border-color #de0000
    }
    .top-sales {
      color orange-color-hover
      border-color orange-color-hover
    }
    .recommend {
      color #0e7200
      border-color #0e7200
    }
  }
}