.tags,
.sub-category {
  .seo-block-1,
  .seo-block-2 {
    .title {
      block-title(0)
    }
    p {
      text-indent 1.5em
    }
  }
  .seo-block-2 {
    padding 35px 0
    background #e8e8e8
  }
}

.tags,
.search,
.sub-category {
  .item {
    padding 25px 15px
    &:hover {
      box-shadow: 0 1px 3px 2px rgba(0, 0, 0, 0.25);
    }
    .url-thumbnail {
      width: 100%;
      height: 100%;
      display: block;
      position: relative;
    }
    .info {
      text-align center
    }
    .price {
      font-family bold-family
      font-size 1.5em
    }
    .phone {
      margin: 10px 0 40px;
      a {
        color: base-color
      }
    }
    img {
      height 160px
    }
    .old-price {
      position relative
      font-size 1.125em
      &:before {
        position: absolute;
        display: block;
        content: '';
        border: 2px solid #d24a43;
        width: 100%;
        left: 0;
        top: 10px;
      }
    }
    .title {
      margin-bottom 10px
      font-family bold-family
      font-size 1.125em
      a {
        color base-color
      }
    }
    ul {
      list-style none
      overflow: hidden;
      padding-left 0
    }
    li {
      float left
      border-radius: 5px;
      padding: 2px 10px;
      border 1px solid
      font-size: .75em;
      &:not(:nth-child(1)) {
        margin-left 10px
      }
    }
    .promotion {
      color #de0000
      border-color #de0000
    }
    .top-sales {
      color orange-color-hover
      border-color orange-color-hover
    }
    .exclusive {
      color #0e7200
      border-color #0e7200
    }
    .entity-text {
      text-indent 1.5em
    }
  }
  .filters, .calc-aside-block, .contacts-aside-block {
    padding 25px 15px
    border-radius: 5px;
    box-shadow()
  }
  .calc-aside-block, .filters {
    margin-bottom 15px
    .header, .name {
      font-family bold-family
    }
    .name {
      font-size 1.125em
    }
  }
  .parameters-block {
    input {
      display none
    }
    label {
      position relative
      margin-left 30px
      font-size .875em
      cursor pointer
      &:after {
        display block
        content ''
        width 15px
        height 15px
        border 1px solid #dcdcdc
        position absolute
        left -30px
        top 4px
        border-radius 3px
      }
    }
    input:checked + label {
      &:after {
        background-color orange-color-hover
      }
      &:before {
        display: block;
        content: '\F00C';
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
        color: #fff;
        position: absolute;
        left: -29px;
        top: 3px;
        z-index: 1;
        font-size: .9em;
      }
    }
  }
  .separator {
    border-top 3px solid orange-color-hover
    width 40%
  }
  .go-to {
    go-to();
    width 100%
    margin-top 20px
  }
  .btn-filter {
    go-to();
    width 100%
    margin-top 20px
  }
  .breadcrumbs + .container {
    margin-bottom 30px
  }
}

.tags,
.sub-category {
  .tags {
    list-style none
    padding-left 0
    margin-top 30px
    li {
      float left
      &:not(:nth-child(1)) {
        margin-left 15px
      }
    }
    a {
      color: #868585
      border 1px solid #868585
      padding: 4px 10px;
      border-radius 5px
      font-size .875em
      text-decoration none
    }
  }
}

.search {
  .smile {
    display block
    margin 30px auto 20px
  }
  .repeat,
  .sorry {
    text-align center
  }
  .sorry {
    font-size: 1.3em;
  }
  .query {
    font-size 1.3em
    font-family bold-family
  }
  .query + hr {
    border-top 2px solid #ff5a09
    width 30%
    margin: 10px 0;
  }
}

@media (max-width: 1200px) {
  .tags,
  .search,
  .sub-category {
    .item {
      padding: 15px 0;
      .row {
        > div:nth-child(1) {
          padding-right 0
        }
        > div:nth-child(3) {
          padding-left 0
        }
      }
    }
  }
}

@media (max-width: 992px) {
  .search,
  .tags,
  .sub-category {
    .header {
      padding: 8px 0 8px;
    }
    .filters {
      padding: 15px;
    }
    ul {
      list-style none
      padding-left 0
    }
    form {
      display: block;
      overflow: hidden;
    }
    .parameters-block {
      float left
    }
    .parameters-block:nth-child(1) {
      width 38%
    }
    .parameters-block:nth-child(2) {
      width 36%
    }
    .parameters-block:nth-child(3) {
      width 25%
    }
    .item {
      .btn {
        width: 180px;
      }
    }
  }
}

@media (max-width: 768px) {
  .sub-category .seo-block-1 p {
    display none
  }

  .tags,
  .search,
  .sub-category {
    .row > div > .title {
      font-size 1.125em !important
    }
    .go-to {
      width 180px
    }
    .item {
      width: 50%;
      float: left;
      text-align: center;
      .phone {
        margin: 10px 0 15px;
      }
      .title {
        font-size 1em
        margin-bottom 0
      }
      .entity-text {
        text-indent: 0;
      }
      .row {
        > div:nth-child(1) {
          padding-right 15px
        }
        > div:nth-child(3) {
          padding-left 15px
        }
      }
    }
  }
}

@media (max-width: 575px) {
  .tags,
  .search,
  .sub-category {
    .item {
      width: 280px;
      float: none;
      margin 0 auto
    }
    .parameters-block {
      width 100% !important
      float none
    }
  }
}