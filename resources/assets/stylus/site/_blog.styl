.blog {
  .title {
    text-align center
    font-family bold-family
    font-size 1.5em
    margin-bottom 20px
  }
  article {
    padding: 15px;
    &:hover {
      box-shadow: 0 1px 3px 2px rgba(0, 0, 0, 0.25);
    }
    img {
      margin-top: 35px;
      height 160px
    }
    header {
      margin-bottom 10px
      a {
        color base-color
        font-family bold-family
      }
    }
    p {
      text-indent 1.5em
    }
  }
}

.blog-inside {
  article {
    .rating-block {
      margin 10px 0
    }
    .img-fluid {
      display: block;
      margin: 15px auto;
    }
    .title {
      font-family: OpenSans-Bold, sans-serif;
      font-size: 1.8em;
      line-height: 1.4em;
      margin-bottom: 15px;
    }
    p {
      text-indent 1.5em
      margin: 10px 0;
    }
    footer {
      .watch-more {
        font-family bold-family
        margin-bottom 15px
        font-size 1.3em
      }
      .assessment {
        font-family italic-family
        font-size 1.125em
      }
      img {
        height 160px
      }
      header {
        font-size 1em
        margin-top 10px
        font-family bold-family
        a {
          color: base-color
        }
      }
    }
  }
}

.blog,
.blog-inside {
  .breadcrumbs + .container {
    margin-bottom 30px
  }
  .fa-eye {
    font-weight: bold;
    margin-right: 6px;
    color: #979696;
    margin-bottom 10px
  }
  .fas {
    margin-right 6px
  }
}

aside {
  .offers-aside-block {
    width 100%
    margin 15px 0
  }
  ul {
    list-style none
    padding-left 0
  }
  .go-to {
    go-to()
    margin 15px auto 10px
    width: 160px;
  }
  .calc-aside-block,
  .contacts-aside-block {
    padding 25px 15px
    border-radius: 5px;
    box-shadow()
  }
  .calc-aside-block {
    text-align center
    padding 25px 15px
    position relative
    &:after {
      display: block;
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      background: url('/images/services.png') no-repeat;
      height: 193px;
      width: 200px;
      z-index: -1;
    }
  }
  .contacts-aside-block {
    position relative
    &:after {
      display block
      content ''
      width: 200px;
      height: 193px;
      left: 0;
      bottom: 0;
      position: absolute;
      background url("../images/services.png") no-repeat
      background-position-x: -550px;
      z-index: -1;
    }
    a {
      color: base-color
    }
    i {
      transform: rotateY(160deg);
      margin-right 6px
    }
    .phones {
      line-height 1.8em
      font-size 1.3em
    }
  }
}

@media (max-width: 575px) {
  .blog article img {
    margin-top: 0;
  }
}