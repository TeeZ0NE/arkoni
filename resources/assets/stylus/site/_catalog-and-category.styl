.catalog, .category {
  .seo-block-1 {
    padding: 0 0 30px;
    .title {
      block-title(15px)
    }
    p {
      text-indent 1.5em
    }
  }
  .products {
    text-align center
    padding-bottom: 15px;
    .col-md-3 {
      padding: 30px 15px 90px;
      &:hover {
        box-shadow: 0 1px 3px 2px rgba(0,0,0,0.25);
      }
    }
    img {
      margin: 0 auto 15px;
      height: 140px;
    }
    .go-to {
      go-to()
      width 180px
      margin-top 20px
      position: absolute;
      bottom: 30px;
      left: 0;
      right: 0;
    }
    .name {
      font-size 1.125em
      font-family regular-family
    }
  }
  .seo-block-2 {
    background #e8e8e8
    padding 35px 0
    .title {
      block-title(15px)
    }
    p {
      text-indent 1.5em
    }
  }
  .services {
    padding-bottom 30px
  }
}

.catalog {
  .certificates {
    padding-top 40px
    .title {
      block-title(30px)
    }
    ul {
      list-style none
    }
    li {
      width 20%
      float left
    }
    img {
      display block
      margin 0 auto
    }
  }
}